<section id="area_index">
	<div class="page-header">
	    <h1>Areas Index</h1>
	</div>
	<div class="row">
		<div class="span4">
			<h2>All Areas</h2>
			<p>This is where the entire list of areas will
				go for a particular user. They will be able 
				to see quick glances of hotspots and troubles.</p>
				<ul class="unstyled">
					<li><%= link_to 'Let\'s add an Area!', new_area_path, :class => 'btn primary' %></li>
				</ul>
		</div>
		<div class="span12">
			<div class="panel">
			<ul>
				<% @areas.each do |area| %>
					<li><%= link_to "#{area.name}", area %></li>
				<% end %>
			</ul>
			</div>
		</div>
	</div>
</section>