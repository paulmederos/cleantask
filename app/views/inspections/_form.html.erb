<%= form_for @inspection do |f| %>
  <%= f.error_messages %>
	<div class="clearfix">
		<%= f.label :facility_id %>
    <div class="input">
      <%= collection_select(:inspection, :facility_id, @facilities, :id, :name, options = {:prompt => "Select a facility"}, :class =>"clients_select") %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label:name %>
		<div class="input">
    	<%= f.text_field :name %>
		</div>
	</div>
	
	<%= f.fields_for :questions do |q| %>
		<div class="clearfix">
			<%= q.fields_for :answer do |a| %>
		    <%= q.label :content, :content %>
				<div class="input">
		    	<%= a.check_box :content %>
				</div>
			<% end %>
		</div>
	<% end %>	
	
	<div class="actions">
		<%= f.submit "Submit", :class => 'btn' %>
	</div>
<% end %>
