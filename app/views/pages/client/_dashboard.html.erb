<div class="row" id="client_user">
	<div class="span12">
		<div class="row">
			<div class="span12 panel">
				<h3>Notices in Your Facilities</h3>	
				<div class="details">
					<%= link_to 'Open a New Notice', new_notice_path, :class => 'btn pull-right' %>
					<%= render 'notices/notice_detail'%>
				</div>
			</div>	
		</div>
			
		<div class="row">				
			<div class="span6">
				<div class="panel">
					<h3>
						<%= link_to 'All of Your Facilities', clients_path %>
					</h3>	
					<div class="details">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>Name</th>
									<th>Address</th>
								</tr>
							</thead>
							<tbody>
								<% @facilities.each do |facility| %>
									<tr>
										<td><%= link_to facility.name, facility %></td>
										<td><%= facility.address %></td>
									</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			
			
		</div>
	</div>
</div>