<section id="dashboard">
	<div class="page-header">
	    <h1>Dashboard</h1>
	</div>
	<div class="row">
		<div class="span4">
			<h2>We are now home!</h2>
			<p>This is where the entire list of clients will
				go for a particular user. They will be able 
				to see quick glances of statuses.</p>
		</div>
		<div class="span6">
			<div class="panel">
				<h3>
					<%= link_to 'All Clients', clients_path %>
				</h3>	
				<div class="details">
					<%= link_to 'Add Client', new_client_path, :class => 'btn pull-right'%>
					<ul>
						<% @clients.each do |client| %>
							<li><%= link_to "#{client.name}", client %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	
		<div class="span6">
			<div class="panel">
				<h3>All Facilities</h3>
				<div class="details">
					<%= link_to 'Add Facility', new_facility_path, :class => 'btn pull-right' %>
					<ul>
						<% @facilities.each do |facility| %>
							<li><%= link_to "#{facility.name}", facility %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>