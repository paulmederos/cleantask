<div class="row" id="vendor_user">
	<aside class="span3">
		<h2>We are now home!</h2>
		<p>This is where the entire list of clients will
			go for a particular user. They will be able 
			to see quick glances of statuses.</p>
	</aside>
	<div class="span8">
		<div class="row">
			<div class="span8 panel">
				<h3>All <%= link_to "Open Notices", notices_path %> from All Clients</h3>	
				<div class="details">
					<%= link_to 'Open a New Notice', new_notice_path, :class => 'btn pull-right' %>
					<%= render 'notices/notice_detail'%>
					<p>* Immediate priority notices <span class="priority-immediate">are highlighted in red</span>.</p>
				</div>
			</div>	
		</div>
			
		<div class="row">	
			<div class="span4">
				<div class="panel">
					<h3>
						<%= link_to 'All Clients', clients_path %>
					</h3>	
					<div class="details">
						<%= link_to 'Add Client', new_client_path, :class => 'btn pull-right'%>
						<ul>
							<% @clients.each do |client| %>
								<li><%= link_to "#{client.name}", client %></li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
			
			<div class="span4">
				<div class="panel">
					<h3>All Facilities</h3>
					<div class="details">
						<%= link_to 'Add Facility', new_facility_path, :class => 'btn pull-right' %>
						<ul>
							<% @facilities.each do |facility| %>
								<li><%= link_to "#{facility.name}", facility %></li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
			
			<% if current_user.admin? %>
				<%= render 'admin_dash' %>
			<% end %>	
			
		</div>
	</div>
</div>