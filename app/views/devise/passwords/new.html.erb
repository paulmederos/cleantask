<section id="home-unlogged">
	<div class="home-signin forgot_password">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

			 <div class="input_wrapper">
			  <%= f.label :email, "Your email address", :style => "display:none" %>
			  <%= f.email_field :email, :placeholder => "eg. name@site.com" %>
			</div>
			
		  <%= f.submit "Reset my password", :class => 'btn btn-info btn-large'  %> or <%= link_to "let me sign in", :root %>
		<% end %>
	</div>
</section>