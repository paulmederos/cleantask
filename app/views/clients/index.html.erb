<section id="client_index">
	<div class="page-header">
	    <h1>Client Index</h1>
	</div>
	<div class="row">
		<div class="span4">
			<h2>The whole list</h2>
			<p>This is where the entire list of clients will
				go for a particular user. They will be able 
				to see quick glances of statuses.</p>
				<ul class="unstyled">
					<li><%= link_to 'Let\'s add a client!', new_client_path, :class => 'btn btn-primary' %></li>
				</ul>
		</div>
		<div class="span12">
			<div class="panel">
			<ul>
				<% @clients.each do |client| %>
					<li><%= link_to "#{client.name}", client %></li>
				<% end %>
			</ul>
			</div>
		</div>
	</div>
</section>