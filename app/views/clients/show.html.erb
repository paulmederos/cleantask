<section id="client_show">
	<div class ="page-header">
		<h1><%= @client.name %></h1>
	</div>

	<div class="row">
		<div class="span4">
			<%= link_to 'Back to Dashboard', :root %>
			<h2>ID: <%= @client.id %></h2>
			<h6>Created <%= @client.created_at.strftime("%m/%d/%Y | %I:%M%p") %>.</h6>
			<p>This is where a description of the client would go. Maybe
				a list of all Client Users that have access to the system?</p>
			<%= button_to 'Delete Client', client_path, :method => :delete, 
										:confirm => "Are you sure you want to remove this client? This is irreversible!", :class => 'btn danger' %>
		</div>
		<div class="span12">
			<div class="panel">
				<h3>Client Contact Information</h3>
				<div class="details">
					<p><b>Name:</b> <%= @client.name %></p>
					<p><b>Billing address:</b> <%= "#{@client.billing_address} | #{@client.billing_zip}" %></p>
					<p><b>Contact:</b> <%= @client.contact_name %></p>
					<p><b>Contact email:</b> <%= link_to @client.contact_email,
					 														 "mailto:#{@client.contact_email}"%></p>
					<p><b>Contact phone:</b> <%= @client.contact_phone %></p>
				</div>
			</div>
		
				<div class="panel">
					<h3>Facilities Served</h3>
					<div class="details">
						<%= link_to 'Add Facility', new_facility_path, :class => 'btn pull-right' %>
						<% if @client.facilities %>
							<ul>
								<% @client.facilities.each do |facility| %>
									<li><%= link_to "#{facility.name}", facility %></li>
								<% end %>
							</ul>
						<% else %>	
							<p>There are currently no facilities associated with <%= @facility.name %>.</p>
						<% end %>	
					</div>
				</div>
		</div>
	</div>
</section>